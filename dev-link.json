{
  "globalLocalPath": "./local-packages",
  "autoScan": true,
  "links": [
    {
      "package": ["@test/ui-components", "@test/icons"]
    },
    {
      "package": "test-utils",
      "localPath": "./custom-utils"
    },
    {
      "package": "lodash"
    }
